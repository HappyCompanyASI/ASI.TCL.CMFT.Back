{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",


  "Serilog": {
    "Using": [
      "Serilog.Sinks.File",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithThreadId", "WithProcessId" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/app-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341",
          "restrictedToMinimumLevel": "Debug"
        }
      }
    ],
    "Properties": { "Application": "ASI.TCL.CMFT.WebAPI" }
  },

  "ConnectionStrings": {
    "ASIConnection": "Host=localhost;Port=5432;Database=TCL_CMFTDB;Username=postgres;Password=postgres",
    "HomeConnection": "Server=DESKTOP-F8QBM82\\SQLEXPRESS;Database=TESTDB;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True",
    "RavenSettings": "Urls=http://live-test.ravendb.net;DatabaseName=test;CertFilePath=;CertPassword="

  },

  "DatabaseProvider": "ASIConnection",

  "JwtSettings": {
    "Secret": "MySuperSecretKeyThatIsLongEnough123!",
    "Issuer": "https://localhost:7136",
    "Audience": "https://localhost:7136",
    "ExpirationMinutes": 3000
  }

}